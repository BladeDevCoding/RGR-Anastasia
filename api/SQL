
CREATE TABLE "aktsiyi" (
  "id" integer NOT NULL,
  "nazva" varchar(100) NOT NULL,
  "opis" text,
  "znyzhka" decimal(5,2),
  "data_pochatku" date,
  "data_zakinchennya" date,
  "kav_yarnya_id" integer
);

