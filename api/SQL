ALTER TABLE "kotyky" ADD PRIMARY KEY ("id");
ALTER TABLE "menu" ADD PRIMARY KEY ("kav_yarnya_id", "produkt_type", "produkt_id");
ALTER TABLE "retsepty" ADD PRIMARY KEY ("id");

CREATE INDEX "kotyky_kav_yarnya_id_idx" ON "kotyky" ("kav_yarnya_id");
CREATE INDEX "retsepty_kava_id_idx" ON "retsepty" ("kava_id");


ALTER TABLE "kav_yarni" ADD CONSTRAINT "kav_yarni_adresa_key" UNIQUE ("adresa");
ALTER TABLE "ingredienty" ADD CONSTRAINT "ingredienty_nazva_key" UNIQUE ("nazva");

ALTER TABLE "kotyky" 
  ADD CONSTRAINT "kotyky_kav_yarnya_id_fkey" 
  FOREIGN KEY ("kav_yarnya_id") REFERENCES "kav_yarni" ("id");

ALTER TABLE "menu" 
  ADD CONSTRAINT "menu_kav_yarnya_id_fkey" 
  FOREIGN KEY ("kav_yarnya_id") REFERENCES "kav_yarni" ("id");

ALTER TABLE "retsepty" 
  ADD CONSTRAINT "retsepty_kava_id_fkey" 
  FOREIGN KEY ("kava_id") REFERENCES "kava" ("id");

CREATE SEQUENCE kotyky_id_seq START WITH 26;
CREATE SEQUENCE retsepty_id_seq START WITH 8;

ALTER TABLE "kotyky" ALTER COLUMN "id" SET DEFAULT nextval('kotyky_id_seq');
ALTER TABLE "retsepty" ALTER COLUMN "id" SET DEFAULT nextval('retsepty_id_seq');