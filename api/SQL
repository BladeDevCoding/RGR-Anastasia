CREATE TABLE "kav_yarni" (
  "id" integer NOT NULL,
  "nazva" varchar(50) NOT NULL,
  "adresa" varchar(100) NOT NULL,
  "telefon" varchar(20),
  "grafik_roboty" varchar(50),
  "opys" text,
  "foto_url" varchar(255)
);

