CREATE TABLE "retsepty" (
  "id" integer NOT NULL,
  "kava_id" integer NOT NULL,
  "krok" integer NOT NULL,
  "instruktsiya" text NOT NULL
);

INSERT INTO "retsepty" ("id", "kava_id", "krok", "instruktsiya") VALUES
