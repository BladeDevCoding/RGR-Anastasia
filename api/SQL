ALTER TABLE "aktsiyi" ADD PRIMARY KEY ("id");
ALTER TABLE "deserty" ADD PRIMARY KEY ("id");
ALTER TABLE "ingredienty" ADD PRIMARY KEY ("id");
ALTER TABLE "kava" ADD PRIMARY KEY ("id");
ALTER TABLE "kav_yarni" ADD PRIMARY KEY ("id");

ALTER TABLE "aktsiyi" 
  ADD CONSTRAINT "fk_aktsiyi_kav_yarni" 
  FOREIGN KEY ("kav_yarnya_id") REFERENCES "kav_yarni" ("id");

ALTER TABLE "kava_ingredienty" 
  ADD CONSTRAINT "fk_kava_ingredienty_kava" 
  FOREIGN KEY ("kava_id") REFERENCES "kava" ("id"),
  ADD CONSTRAINT "fk_kava_ingredienty_ingredienty" 
  FOREIGN KEY ("ingredient_id") REFERENCES "ingredienty" ("id");

CREATE SEQUENCE aktsiyi_id_seq START WITH 4;
CREATE SEQUENCE deserty_id_seq START WITH 6;
CREATE SEQUENCE ingredienty_id_seq START WITH 10;
CREATE SEQUENCE kava_id_seq START WITH 8;
CREATE SEQUENCE kav_yarni_id_seq START WITH 6;

ALTER TABLE "aktsiyi" ALTER COLUMN "id" SET DEFAULT nextval('aktsiyi_id_seq');
ALTER TABLE "deserty" ALTER COLUMN "id" SET DEFAULT nextval('deserty_id_seq');
ALTER TABLE "ingredienty" ALTER COLUMN "id" SET DEFAULT nextval('ingredienty_id_seq');
ALTER TABLE "kava" ALTER COLUMN "id" SET DEFAULT nextval('kava_id_seq');
ALTER TABLE "kav_yarni" ALTER COLUMN "id" SET DEFAULT nextval('kav_yarni_id_seq');

CREATE TYPE stat_type AS ENUM ('чоловіча', 'жіноча');
CREATE TYPE produkt_type AS ENUM ('кава', 'десерт');

CREATE TABLE "kotyky" (
  "id" integer NOT NULL,
  "imya" varchar(30) NOT NULL,
  "vik" integer,
  "stat" stat_type,
  "poroda" varchar(30),
  "harakterystyka" text,
  "kav_yarnya_id" integer NOT NULL,
  "foto_url" varchar(255)
);

