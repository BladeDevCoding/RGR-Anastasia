{
  "version": 2,
  "functions": {
    "*.php": {
      "runtime": "vercel-php@0.7.3"
    }
  },
  "routes": [
    { "src": "/styles.css", "dest": "/styles.css" },
    { "src": "/images/(.*)", "dest": "/images/$1" },
    { "src": "/foto/(.*)", "dest": "/foto/$1" },
    { "src": "/foto_kafe/(.*)", "dest": "/foto_kafe/$1" },
    { "src": "/foto_deserts/(.*)", "dest": "/foto_deserts/$1" },
    { "src": "/(.*)", "dest": "/index.php" }
  ],
  "buildCommand": "mkdir -p public && cp -r api/styles.css public/api/",
  "outputDirectory": "public"
}